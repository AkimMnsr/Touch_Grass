{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <h1>{{ app.user.pseudo }}</h1>

    Prenom: {{ app.user.prenom }}
    Nom: {{ app.user.nom }}
    Téléphone: {{ app.user.telephone }}
    Email: {{ app.user.mail }}
    Ville de rattachement: {{ app.user.SitesNoSite.NomSite }}
    <button><a href={{ path('profil_afficher')}} >Retour</a></button>
    <button><a href={{ path('profil_modifier') }} >Modifier</a></button>
{% endblock %}
