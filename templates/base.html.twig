<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Touch Grass{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org
          /2000/svg%22 viewBox=%220 0 128 128%22>
          <text y=%221.2em%22 font-size=%2296%22>
          ⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset('Css/base.css') }}">

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<header id="header">

    <!-- div emplacement logo -->

    <!-- div emplacement ancre nav bar -->
    <div id="nav_bar">
        <div id="nav_bar_img">
            <a id="img_ancre" href="{{ path('main_index') }}">
                <img id="img_nav_bar" src="{{ asset('img/MicrosoftTeams-image.png') }}" alt="logo du site">
                <h2>Touch Grass</h2>
            </a>
        </div>
        <div id="nav_bar_ancre">
            {% if is_granted('ROLE_ADMIN') %}
            <a class="nav_bar_ancre" href="">Villes</a>
            <a class="nav_bar_ancre" href="">Sites</a>
            {% endif %}
            <a class="nav_bar_ancre" href="{{ path('main_index') }}">Accueil</a>
            {% if app.user %}
            <a class="nav_bar_ancre" href="{{ path('profil_afficher') }}">Mon profil</a>
            <a class="nav_bar_ancre" href="{{ path('app_logout') }}">Se déconnecter</a>
            {% else %}
            <a class="nav_bar_ancre" href="{{ path('app_register') }}">S'inscrire</a>
                <a class="nav_bar_ancre" href="{{ path('app_login') }}">Se connecter</a>
            {% endif %}

        </div>
    </div>
</header>

<section id="base_section">

    {% block body %}{% endblock %}

</section>

<footer id="base_footer">
    <div>
        <h5>© Touch Grass - {{ "now" | date("Y") }}</h5>
    </div>
</footer>


</body>
</html>
